<!DOCTYPE html>
<script type="text/javascript" src="/js/page/index.js?<%=UIRev%>"></script>
<script type="text/javascript" src="/js/page/game.js?<%=UIRev%>"></script>
<div class="preloader"><div class="item0"></div></div>
<div class="main-block">
<div class="page-loading home-page-item">
    <div id="jSplash">
        <div id="ball"></div>
        <div id="ball-0"></div>
        <div id="ball-1"></div>
    </div>
</div>
<div class="page-index home-page-item">
    <div class="page-left"><div class="left-wrap">

        <div class="role-create-room"><input type="button" class="button role-show-create-room" value="创建房间">
        <div class="role-create-room-wrapper">
            <label>房间名: </label><input type="text" class="textbox role-create-room-name"> <label>最大人数: </label><input type="text" class="textbox role-create-room-max" value="10"> <input type="button" class="button button-def role-create-room-button" value="创建">
        </div>
        </div>

        <div class="module module-rooms">
            <div class="module-content">

            </div>
        </div>

    </div></div>
    <div class="page-right">

        <div class="module module-profile">
            <div class="module-content">
            <div class="nick"><%= request.session.nick %></div>
            </div>
        </div>

        <div class="module module-online-users">
            <div class="module-title">在线玩家</div>
            <div class="module-content">

            </div>
        </div>

    </div>
    <div class="clear"></div>
</div>
<div class="page-room home-page-item">

    <div class="page-left"><div class="left-wrap">

        <div><h2 class="role-room-title"></h2></div>
        <div class="module module-stage">请等待房主开始游戏 ヾ(*´∇`)ﾉ</div>

    </div></div>
    <div class="page-right">

        <div class="module module-profile">
            <div class="module-content">
            <div class="nick"><%= request.session.nick %></div>
            <div class="score"></div>
            </div>
        </div>

        <div class="module module-room-users">
            <div class="module-title">房间玩家</div>
            <div class="module-content"></div>
        </div>

        <div class="module module-chat">
            <div class="module-title">Chat</div>
            <div class="module-content">
                <div class="chat-content"></div>
                <div class="chat-send"><input type="text" class="textbox role-chat-textbox"></div>
            </div>
        </div>

    </div>
    <div class="clear"></div>
</div>
</div>
